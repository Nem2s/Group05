<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="true"
    android:padding="@dimen/material_component_cards_top_and_bottom_padding"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_userimage"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:src="@drawable/placeholder" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@id/cv_userimage"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VeryLongUserName"
            android:textStyle="bold"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tv_user_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxLines="1"
            android:textStyle="italic"
            android:text="1234567 â‚¬" />
    </LinearLayout>
    <io.codetail.widget.RevealFrameLayout
        android:id="@+id/reveal_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/button_pay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:theme="@style/GreenButton" />

        <Button
            android:id="@+id/button_notify"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Notify"
            android:theme="@style/BlueButton"
            android:visibility="gone" />
        <ProgressBar
            android:id="@+id/pb_loading_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_loading_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_done_all_black_24dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </io.codetail.widget.RevealFrameLayout>
</RelativeLayout>