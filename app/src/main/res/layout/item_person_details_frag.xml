<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/card_person"
    app:cardCornerRadius="2dp"
    android:layout_margin="4dp"
    android:elevation="11dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="1">

            <ImageView
                android:id="@+id/person_image"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/person_image"
                android:textSize="24sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/total_balace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#dddddd"
            android:visibility="gone"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/person_personal_credit_debit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/person_personal_credit_debit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/person_personal_credit_debit_text"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/info_total_credit_debit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_personal_credit_debit_text"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_total_credit_debit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/person_personal_credit_debit_text"
                        android:layout_toRightOf="@+id/info_total_credit_debit_text"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/info_total_expenses_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_total_credit_debit_text"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_total_expenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/info_total_credit_debit_text"
                        android:layout_toRightOf="@+id/info_total_expenses_text"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>