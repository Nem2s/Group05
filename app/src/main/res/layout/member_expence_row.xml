<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/lin_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_person_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/tv_name_member"
            android:layout_alignParentStart="true" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_name_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lin_im"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/et_quotae"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/euro_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/euro" />

        <EditText
            android:id="@+id/et_ins"
            android:layout_marginTop="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:digits="0123456789.,"
            android:inputType="number"
            android:textSize="13sp"
            android:visibility="visible"
            android:imeOptions="actionDone"
            android:maxLength="5"
            android:textColor="@color/colorSecondaryText"
            android:layout_toLeftOf="@+id/euro_member"
            />
    </RelativeLayout>

</RelativeLayout>