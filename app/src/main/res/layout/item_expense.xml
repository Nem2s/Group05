<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/card_expense"
    app:cardCornerRadius="2dp"
    android:layout_margin="4dp"
    android:elevation="11dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/expense_image"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
         />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:textStyle="bold"
    android:textSize="16sp"
    android:id="@+id/expense_name"
    android:layout_toRightOf="@+id/expense_image"
    android:layout_toLeftOf="@+id/expense_price"
    />
<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:textStyle="italic"
        android:textSize="10sp"
        android:id="@+id/expense_Type"
        android:layout_below="@+id/expense_subscribe"
        android:visibility="gone"
        android:text="Published as a PROPOSAL"
        android:textColor="@color/colorAccent"
        android:gravity="right"

-->
        />
    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expense_price"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:paddingRight="16dp"
        android:layout_toLeftOf="@+id/textViewOptions"
        android:gravity="right"
        />
    <TextView
        android:textStyle="italic|bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expense_subscribe"
        android:text="SUBSCRIBE"
        android:textColor="#FFBF00"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/expense_price"
        android:gravity="right"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/expense_price"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />
</RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/expense_rv">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:textStyle="italic"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expense_owner"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:gravity="right"

            />
        <TextView
            android:id="@+id/expense_file"
            android:textStyle="normal"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:gravity="left"

            />

</LinearLayout>
</android.support.v7.widget.CardView>