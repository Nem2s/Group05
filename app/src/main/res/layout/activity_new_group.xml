<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.group05.group05.NewGroup">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/appbar_coord_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="@string/transition_appbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:id="@+id/et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <com.pkmmte.view.CircularImageView
                    android:id="@+id/iv_new_group"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/network" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/group_name_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Group Name"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/white"
                    app:met_floatingLabelAnimating="true"
                    app:met_singleLineEllipsis="true" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
            android:id="@+id/rv_layout"
            android:layout_below="@id/appbar_coord_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Partecipants: " />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/invited_people_list"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="16dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/add_to_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:text="Create it!"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:theme="@style/AppTheme.Button" />

</RelativeLayout>
