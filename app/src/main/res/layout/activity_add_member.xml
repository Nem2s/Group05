<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.group05.group05.NewGroup">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <io.codetail.widget.RevealFrameLayout
            android:id="@+id/reveal_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                app:collapseIcon="@drawable/ic_action_back"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/ToolbarTheme"
                android:transitionName="@string/transition_toolbar"
                >
                <LinearLayout
                    android:id="@+id/cv_header_ll"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:transitionName="@string/transition_group_image"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_group_image"
                        android:layout_height="48dp"
                        android:layout_width="48dp"
                        android:focusableInTouchMode="true"
                        android:transitionName="@string/transition_group_image"
                        />


                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GroupName05"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        android:transitionName="@string/transition_text"
                        android:textSize="20sp" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </io.codetail.widget.RevealFrameLayout>
        <View
            android:id="@+id/anchor_dropdown"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingTop="32dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_partecipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Partecipants: "
                android:alpha="0.8"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/no_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No people found"
                android:textStyle="italic"
                android:alpha="0.5"
                android:layout_gravity="center"
                android:layout_marginTop="64dp"
                android:visibility="gone"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/invited_people_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
