<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="true"
    android:padding="@dimen/material_component_cards_top_and_bottom_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_userimage"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Leave"
        android:theme="@style/RedButton"
        />
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VeryLongUserName"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/cv_userimage"
        android:layout_toLeftOf="@id/button_leave"
        android:ellipsize="end"
        android:maxLines="1"
        />

</RelativeLayout>