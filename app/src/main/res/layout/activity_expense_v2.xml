<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.group05.group05.Expense_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:transitionName="@string/transition_appbar"

            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:transitionName="@string/transition_toolbar"

                >

                <LinearLayout
                    android:id="@+id/cv_header_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:transitionName="@string/transition_group_image">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_group_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:focusableInTouchMode="true"
                        android:transitionName="@string/transition_group_image" />


                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Add an Expense"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:transitionName="@string/transition_text" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <!--
            <android.support.v7.widget.CardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">
-->
        <RelativeLayout
            android:id="@+id/relNino"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <TextView
                android:id="@+id/exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:text="New Expense"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_network"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/exp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/idea" />


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image_network"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_name_expense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="80dp"
                        android:hint="Description"
                        android:imeOptions="actionDone"
                        android:textSize="18sp"
                        android:textStyle="normal"
                     />
                </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_cost_expense"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:digits="0123456789.,"
                                android:hint="Cost"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                android:drawableRight="@drawable/euro"
                            />
                        </android.support.design.widget.TextInputLayout>
                    <RelativeLayout
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        >

                        <ImageView
                                android:id="@+id/calendar"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                            android:layout_margin="4dp"
                            android:padding="2dp"
                            android:src="@drawable/calendar" />

                            <TextView
                                android:id="@+id/name_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="4dp"
                                android:layout_toLeftOf="@+id/calendar"
                                android:text="today" />
                        </RelativeLayout>
                    </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="@dimen/material_layout_keylines_screen_edge_margin"
                    android:layout_marginStart="@dimen/material_layout_keylines_screen_edge_margin"
                    android:layout_marginTop="8dp"
                    android:alpha="0.6"
                    android:background="@android:color/darker_gray" />


            </LinearLayout>
            </RelativeLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_navigate_next_black_24dp"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>