<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.group05.group05.Expense_activity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:transitionName="@string/transition_appbar"

            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:transitionName="@string/transition_toolbar"

                >
                <LinearLayout
                    android:id="@+id/cv_header_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:transitionName="@string/transition_group_image"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_group_image"
                        android:layout_height="48dp"
                        android:layout_width="48dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:focusableInTouchMode="true"
                        android:transitionName="@string/transition_group_image"
                        />


                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add an Expense"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        android:transitionName="@string/transition_text"
                        android:textSize="20sp" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_totale"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/relNino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@color/card_background"
                    android:orientation="horizontal">


                        <TextView
                            android:id="@+id/exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Add an Expense"
                            android:layout_centerHorizontal="true"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/image_network"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/exp"
                            android:src="@drawable/idea" />



                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_below="@+id/image_network"
                        android:orientation="vertical">


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_name_expense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:hint="Name"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            app:met_baseColor="#000000"
                            app:met_errorColor="#646464"
                            app:met_floatingLabel="highlight" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_cost_expense"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:digits="0123456789.,"
                            android:hint="Cost"
                            android:inputType="numberDecimal"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_errorColor="#646464"
                            app:met_floatingLabel="highlight"
                            app:met_iconRight="@drawable/euro" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            >
                        <CheckBox
                            android:id="@+id/cb2_addfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:buttonTint="@color/quantum_grey_600"
                            android:clickable="true"
                            android:onClick="file_handler"
                            android:text="File"
                            android:textColor="@color/gray"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/nomeFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:layout_toRightOf="@+id/cb2_addfile"
                            android:layout_centerVertical="true"
                            android:textStyle="italic"
                            android:layout_marginLeft="8dp"/>

                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_expand_more" />
                        </RelativeLayout>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_members"
                        android:layout_width="match_parent"
                        android:layout_below="@id/layout1"
                        android:visibility="visible"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainCard"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">


            </android.support.v7.widget.CardView>
        </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:src="@drawable/ic_action_tick"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>