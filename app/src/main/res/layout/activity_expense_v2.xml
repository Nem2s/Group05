<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.group05.group05.Expense_activity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:transitionName="@string/transition_appbar"

            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:transitionName="@string/transition_toolbar"

                >
                <LinearLayout
                    android:id="@+id/cv_header_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:transitionName="@string/transition_group_image"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_group_image"
                        android:layout_height="48dp"
                        android:layout_width="48dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:focusableInTouchMode="true"
                        android:transitionName="@string/transition_group_image"
                        />


                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GroupName05"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        android:transitionName="@string/transition_text"
                        android:textSize="20sp" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@color/card_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_network"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:src="@drawable/network" />


                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_name_expense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:hint="Name"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                app:met_baseColor="#000000"
                                app:met_errorColor="#646464"
                                app:met_floatingLabel="highlight"
                                />

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_cost_expense"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:digits="0123456789.,"
                                android:hint="Cost"
                                android:inputType="numberDecimal"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                app:met_baseColor="@color/colorPrimary"
                                app:met_errorColor="#646464"
                                app:met_floatingLabel="highlight"
                                app:met_iconRight="@drawable/euro"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <CheckBox
                    android:id="@+id/more_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="More details" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view2_toshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <CheckBox
                            android:id="@+id/cb1_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:clickable="true"
                            android:onClick="description_handler"
                            android:text="Description"
                            android:textStyle="normal"
                            android:buttonTint="@color/colorPrimary"

                            />
                        <!--content to hide/show -->

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_description_expense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:inputType="textMultiLine"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_errorColor="#646464"
                            app:met_floatingLabel="highlight" />

                        <RelativeLayout
                            android:id="@+id/rel_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/cb2_addfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:onClick="file_handler"
                                android:text="File"
                                android:textStyle="normal"
                                android:buttonTint="@color/colorPrimary" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:src="@drawable/clip"
                                android:layout_toRightOf="@+id/cb2_addfile"
                                android:layout_centerInParent="true"
                                android:paddingLeft="40dp"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/cb3_deadline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:onClick="deadline_handler"
                                android:text="Deadline"
                                android:textStyle="normal"
                                android:buttonTint="@color/colorPrimary" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="8dp"
                                android:layout_centerInParent="true"
                                android:entries="@array/deadline_name"
                                android:textAlignment="center">

                            </Spinner>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_proposal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/cb4_proposal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:onClick="proposal_handler"
                                android:text="Proposal"
                                android:textStyle="normal"
                                android:buttonTint="@color/colorPrimary" />
                            <RelativeLayout
                                android:id="@+id/relative_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/cb4_proposal">
                                <ImageView
                                    android:id="@+id/InfoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:src="@drawable/ic_action_help"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/layout_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rel_proposal"
                            android:layout_margin="8dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            >

                            <CheckBox
                                android:id="@+id/cb_policy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Split"
                                android:textStyle="normal"
                                android:buttonTint="@color/colorPrimary"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_view2_toshow"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardCornerRadius="2dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_action_add_black"
        android:layout_gravity="bottom|end"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_anchor="@id/scrollView"
        />
</android.support.design.widget.CoordinatorLayout>