<?xml version="1.0" encoding="utf-8"?>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context="it.polito.group05.group05.Expense_activity_Vertical_stepper">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:transitionName="@string/transition_appbar"

        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            >
            <LinearLayout
                android:id="@+id/cv_header_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_group_image"
                    android:layout_height="match_parent"
                    android:layout_width="48dp"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/network"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add an expense"
                    android:layout_margin="4dp"
                    android:gravity=""
                    android:textStyle="bold"
                    android:textSize="15sp" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ernestoyaquello.com.verticalstepperform.VerticalStepperFormLayout
        android:id="@+id/vertical_stepper_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        >
    </ernestoyaquello.com.verticalstepperform.VerticalStepperFormLayout>

    </LinearLayout>

