<RelativeLayout
    android:id="@+id/contact_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_invited_image"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/cv_invited_image">

        <TextView
            android:id="@+id/tv_invited_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginEnd="85dp" />

        <TextView
            android:id="@+id/tv_invited_pnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3351671175"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:alpha="0.8" />

    </LinearLayout>

    <com.afollestad.aesthetic.AestheticButton
        android:id="@+id/button_invite"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
